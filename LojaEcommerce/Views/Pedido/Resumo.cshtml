@{
    ViewData["Title"] = "Resumo";
}
@model Pedido

<h3>Resumo do pedido</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Número do pedido:    @Model.Id</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus dados</h3>
                <div>@Model.Nome</div>
                <div>@Model.Telefone</div>
            </div>
            <div class="col-md-3">
                <div>@Model.Email</div>
            </div>
            <div class="col-md-6">
                <h3>Endereço de entrega</h3>
                <div>@Model.Endereco @Model.Complemento @Model.CEP @Model.Bairro @Model.Cidade @Model.UF</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>
        @foreach(var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@item.Produto.Nome</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@item.Quantidade</div>
                </div>
            </div>
        }
    </div>
</div>